#!/usr/bin/env bash

chrome_extension_id="$1"
output_filepath="$2"

if [ -z "$output_filepath" ]; then
  output_filepath=$(pwd)"/${chrome_extension_id}.crx"
fi

crx_download_url="https://clients2.google.com/service/update2/crx?response=redirect&prodversion=38.0&x=id%3D${chrome_extension_id}%26installsource%3Dondemand%26uc"

wget --no-check-certificate --no-iri -O "$output_filepath" "$crx_download_url"
